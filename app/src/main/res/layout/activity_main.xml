        <!--android:layout_alignTop="@+id/add"-->
        <!--android:layout_toLeftOf="@+id/msg"-->
        <!--android:layout_toStartOf="@+id/msg"-->
        <!--android:onClick="sub"-->
        <!--android:checked="false" />-->

</RelativeLayout>

</ScrollView>
</android.support.v4.widget.DrawerLayout>