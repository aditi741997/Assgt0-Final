<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nikhil.ayush.aditi.assgt0_final1.MainActivity"

    android:background="#c3eb79">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/grdient2">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/teamreg"
        android:id="@+id/App_name"
        android:fontFamily="@string/font"
        android:layout_below="@+id/cop"
        android:layout_centerHorizontal="true"
        android:textColor="#f9f9f9"
        android:textSize="25dp" />










    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register the team"
        android:id="@+id/submit"
        android:onClick="SendData"


        android:layout_below="@+id/Entry3"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Message"
        android:id="@+id/msg"
        android:fontFamily="sans-serif-light"
        android:textColor="#456423"
        android:layout_above="@+id/submit"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:id="@+id/add"
        android:onClick="Add"
        android:visibility="visible"

       android:layout_below="@+id/Entry2"


        android:layout_marginBottom="149dp" />

 
    <!--<RadioButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Add Another Member"-->
        <!--android:id="@+id/add"-->
        <!--android:layout_below="@+id/entry2"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:checked="false"-->
        <!--android:onClick="Add"-->
        <!--android:visibility="visible"/>-->
    <Button
        android:id="@+id/sub"

        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:onClick="sub"
        android:visibility="invisible"
        android:layout_above="@+id/add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="122dp" />

    <EditText

        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/TeamText"

        android:padding="3dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="TeamName"
        android:inputType="text"
        android:textSize="20dp"
        android:background="@drawable/edittextstyle"

        android:layout_below="@+id/App_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/Name1"

        android:padding="3dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="NAME"
        android:inputType="text"
        android:textSize="15dp"
        android:background="@drawable/edittextstyle"

        android:layout_below="@+id/TeamText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />
    <EditText
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/Entry1"

        android:padding="3dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Entry Number"
        android:inputType="text"
        android:textSize="15dp"
        android:background="@drawable/edittextstyle"

        android:layout_below="@+id/Name1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/Name2"

        android:padding="3dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="NAME"
        android:inputType="text"
        android:textSize="15dp"
        android:background="@drawable/edittextstyle"

        android:layout_below="@+id/Entry1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />
    <EditText
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/Entry2"

        android:padding="3dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Entry Number"
        android:inputType="text"
        android:textSize="15dp"
        android:background="@drawable/edittextstyle"

        android:layout_below="@+id/Name2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/Name3"

        android:padding="3dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="NAME"
        android:inputType="text"
        android:textSize="15dp"
        android:background="@drawable/edittextstyle"

        android:layout_below="@+id/Entry2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"/>
    <EditText
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/Entry3"

        android:padding="3dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="Entry Number"
        android:inputType="text"
        android:textSize="15dp"
        android:background="@drawable/edittextstyle"

        android:layout_below="@+id/Name3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Member 1"
        android:id="@+id/textView"
        android:layout_below="@+id/TeamText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

