        android:layout_alignRight="@+id/Entry1"
        android:layout_marginTop="189dp" />

    <EditText
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Entry3"
        android:layout_below="@+id/App_name"
        android:layout_alignStart="@+id/Entry1"
        android:layout_alignLeft="@+id/Entry1"
        android:layout_alignEnd="@+id/Entry1"
        android:layout_alignRight="@+id/Entry1"
        android:layout_marginTop="220dp"
 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name 3"
        android:id="@+id/name3"
        android:fontFamily="@string/font"
        android:layout_below="@+id/entry2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:visibility="invisible" />

    <TextView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entry No. 3"
        android:fontFamily="@string/font"
        android:id="@+id/entry3"
        android:layout_below="@+id/name3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register the team"
        android:id="@+id/submit"
        android:layout_below="@+id/entry3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="SendData"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Message"
        android:id="@+id/msg"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/entry3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
 />

    <Button
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:id="@+id/add"
        android:layout_below="@+id/entry2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:onClick="Add"
        android:visibility="visible"/>

 
